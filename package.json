    "prettier": "^2.4.1",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "tsc --build tsconfig.json",
    "dev": "ts-node-dev --respawn --transpile-only --poll ./src/index.ts",
